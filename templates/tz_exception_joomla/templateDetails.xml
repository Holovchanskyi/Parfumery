            <fieldset name="dev_params">
                <field
                        name="css_override"
                        type="radio"
                        class="btn-group"
                        label="TPL_TZ_LANG_CSS_OVERRIDE"
                        default="0"
                        description="TPL_TZ_LANG_CSS_OVERRIDE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                        name="css_prefixer"
                        type="radio"
                        class="btn-group"
                        label="TPL_TZ_LANG_CSS_PREFIXER"
                        default="0"
                        description="TPL_TZ_LANG_CSS_PREFIXER_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                        name="boxes_temp"
                        type="radio"
                        class="btn-group"
                        label="TPL_TZ_LANG_BOXES_TEMP"
                        default="0"
                        description="TPL_TZ_LANG_BOXES_TEMP_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="max_page_width"
                       type="text" default=""
                       label="TPL_TZ_LANG_MAX_PAGE_WIDTH"
                       description="TPL_TZ_LANG_MAX_PAGE_WIDTH_DESC"/>

                <field name="max_page_width_value"
                       type="list"
                       default="px"
                       label="TPL_TZ_LANG_MAX_PAGE_WIDTH_UNIT"
                       description="TPL_TZ_LANG_MAX_PAGE_WIDTH_UNIT_DESC">
                    <option value="px">TPL_TZ_LANG_PIXEL</option>
                    <option value="%">TPL_TZ_LANG_PERCENT</option>
                </field>
                <field name="background_body"
                       type="media"
                       label="TPL_TZ_LANG_BACKGROUND_BODY"
                       description="TPL_TZ_LANG_BACKGROUND_BODY_DESC"/>

                <field name="css_custom"
                       type="textarea"
                       rows="6"
                       cols="40"
                       label="TPL_TZ_LANG_CSS_CUSTOM"
                       description="TPL_TZ_LANG_CSS_CUSTOM_DESC"/>
                <field
                        name="chrome_frame_support"
                        type="radio"
                        class="btn-group"
                        label="TPL_TZ_LANG_CHROME_FRAME_SUPPORT"
                        default="0"
                        description="TPL_TZ_LANG_CHROME_FRAME_SUPPORT_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
