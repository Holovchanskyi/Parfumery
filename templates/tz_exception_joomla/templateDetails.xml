                <field name="type_p_article" type="list" label="TPL_TZ_TYPE_PORTFOLIO_ARTICLE_LABEL" default="1">
                    <option value="1">JSTYLE1</option>
                    <option value="2">JSTYLE2</option>
                </field>
                <field name="use_article_layout_builder" type="list" label="TPL_TZ_USE_ARTICLE_LAYOUT_BUILDER_LABEL"
                       default="0">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="type_blog" type="list" label="TPL_TZ_TYPE_BLOG_LABEL" default="2">
                    <option value="1">JMASONRY</option>
                    <option value="2">JLARGE</option>
                    <option value="3">JSMALL</option>
                </field>
                <field type="spacer"
                       name="unlimited_color"
                       label="&lt;strong style=&quot;color:#F9701B; text-transform:uppercase; padding-top:10px; display:block;&quot;&gt;Color Style&lt;/strong&gt;"/>

                <field name="global_color1" type="color" label="Color 1 Global"/>
                <field name="global_color2" type="color" label="Color 2 Global"/>
                <field name="global_bg1" type="color" label="Background 1 Global"/>
                <field name="global_color_border" default="" type="color" label="Color Border"/>

                <field type="spacer"
