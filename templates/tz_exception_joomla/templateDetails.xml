                    <option value="1">JYES</option>
                </field>
                <field name="scroll_custom" type="radio" class="btn-group" label="TPL_TZ_SCROLL_CUSTOM" default="0">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
