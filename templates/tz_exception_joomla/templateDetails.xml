                <field name="menu_color_text" type="color" label="Color Menu Text"/>
                <field name="menu_color_text_hover" type="color" label="Color Menu Text Hover"/>
                <field name="menu_color_text_active" type="color" label="Color Menu Text Active"/>
                <field name="menu_color_bg" type="color" label="Color Background 3D"/>
                <field name="menu_color_bg_hover" default="" type="color" label="Color Background Hover"/>
                <field name="menu_color_bg_active" default="" type="color" label="Color Background Active"/>

                <field name="submenu_color_text" default="" type="color" label="Color Text - Sub Menu"/>
